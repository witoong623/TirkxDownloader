<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NewDownloadValue"
           TargetType="{x:Type TypeName=TextBox}"
           BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="Margin"
                Value="3" />
        <Setter Property="Width"
                Value="350" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="IsEnabled"
                Value="False" />
    </Style>
    <Style x:Key="NewCredential"
           TargetType="{x:Type TypeName=TextBox}"
           BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="Margin"
                Value="3" />
        <Setter Property="Width"
                Value="350" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="IsEnabled"
                Value="True" />
    </Style>
    <Style x:Key="GeneralValueSetting"
           TargetType="TextBox"
           BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="Margin"
                Value="3" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="IsEnabled"
                Value="True" />
    </Style>
</ResourceDictionary>