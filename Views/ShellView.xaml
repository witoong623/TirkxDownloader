<Window x:Class="TirkxDownloader.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="400" Width="500" WindowStartupLocation="CenterScreen"
        x:Name="MainWindow">
    <Grid>
        
        <StackPanel>
            <Menu DockPanel.Dock="Top"  IsMainMenu="True">
                <MenuItem Header="File">

                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal">
                <ListBox VerticalAlignment="Top" Width="150" MinHeight="300" BorderThickness="1" Margin="5"/>
                <ContentControl Content="This is space to show list of entry" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
